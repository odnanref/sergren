{% extends 'base.html.twig' %}

{% block title %}{{ "Media" | trans }} {{"index" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Media" | trans }} {{"index" | trans }}</h1>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(media) }}
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ "Name" | trans }}</th>
                <th>{{ "Description" | trans }}</th>
                <th>{{ "Path" | trans }}</th>
                <th>{{ "actions" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for medium in media %}
            <tr>
            	<td><img src="{{ asset('uploads/media/' ~ medium.path) }}" class="img-responsive" width="120" height="120" /></td>
                <td>{{ medium.id }}</td>
                <td>{{ medium.name }}</td>
                <td>{{ medium.description }}</td>
                <td>{{ medium.path }}</td>
                
            </tr>
            <tr>
            	<td>
                    <a href="{{ path('media_show', {'id': medium.id}) }}" class="btn btn-primary">{{ "show" | trans }}</a>
                </td>
                <td colspan="7"></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "no records found" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('media_new') }}" class="btn btn-primary">{{ "Create new" | trans }}</a>
    {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(media) }}
</div>
{% endblock %}
