{% extends 'base.html.twig' %}

{% block title %}{{"Category" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "Category" | trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ "Name" | trans }}</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>{{ "Description" | trans }}</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>{{ "Keywords" | trans }}</th>
                <td>{{ category.keywords }}</td>
            </tr>
            <tr>
            	<th>{{ "Products" | trans }}</th>
            	<td>
            	<ul>
            	{% for prod in category.products %}
            	<li><a href="{{ path("product_show", {"id": prod.id}) }}">{{ prod.name }}</a></li>
            	{% endfor %}
            	</ul>
            	</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}" class="btn btn-primary">{{ "back to list" | trans }}</a>
	
	<div class="col-sm-1 col-xs-1 col-md-1 col-lg-1"></div> 
    
    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary">{{ "edit" | trans }}</a>
	
	<div class="col-sm-1 col-xs-1 col-md-1 col-lg-1"></div> 
    
    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
