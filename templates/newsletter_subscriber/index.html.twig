{% extends 'base.html.twig' %}

{% block title %}{{ "NewsletterSubscriber" | trans }} {{"index" | trans }}{% endblock %}

{% block body %}
    <h1>{{ "NewsletterSubscriber" | trans }} {{"index" | trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ "Name" | trans }}</th>
                <th>{{ "Email" | trans }}</th>
                <th>{{ "State" | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for newsletter_subscriber in newsletter_subscribers %}
            <tr>
                <td>{{ newsletter_subscriber.id }}</td>
                <td>{{ newsletter_subscriber.name }}</td>
                <td>{{ newsletter_subscriber.email }}</td>
                <td>{{ newsletter_subscriber.state ? 'Yes' : 'No' }}</td>
                
            </tr>
            <tr>
            	<td>
                    <a href="{{ path('newsletter_show', {'id': newsletter.id}) }}" class="btn btn-primary mr-1">{{ "show" | trans }}</a>
                </td>
                <td>
                    <a href="{{ path('newsletter_edit', {'id': newsletter.id}) }}" class="btn btn-primary">{{ "edit" | trans }}</a>
                </td>
                <td colspan="5">&nbsp;</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">{{ "no records found" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('newsletter_subscriber_new') }}">{{ "Create new" | trans }}</a>
{% endblock %}
